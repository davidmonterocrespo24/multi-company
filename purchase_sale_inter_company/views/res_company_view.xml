<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_view_form" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.calendar</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Multi Empresa" name="multi_empresa">
                    <group>
                        <field name="so_from_po"/>
                        <field name="sale_auto_validation"/>
                        <field name="warehouse_id"/>
                        <field name="intercompany_sale_user_id"/>
                        <field name="pricelist_id"/>
                        <field name="supplierinfo_pricelist_id"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
